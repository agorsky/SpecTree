{
  "name": "@spectree/mcp",
  "version": "0.1.0",
  "private": true,
  "description": "SpecTree MCP server - Uses HTTP API client (no direct database access)",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "spectree-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run tests/integration/",
    "clean": "rm -rf dist",
    "measure-tokens": "tsx scripts/measure-tool-tokens.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@spectree/shared": "workspace:*",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "tiktoken": "^1.0.22"
  }
}
