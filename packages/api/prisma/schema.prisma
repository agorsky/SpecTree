// Prisma Schema for SpecTree API
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// =============================================================================
// Note: SQLite doesn't support native enums, so we use String fields with
// application-level validation for: MembershipRole, StatusCategory
// Valid MembershipRole values: 'admin', 'member', 'guest'
// Valid StatusCategory values: 'backlog', 'unstarted', 'started', 'completed', 'canceled'
// =============================================================================

model HealthCheck {
  id        Int      @id @default(autoincrement())
  name      String
  status    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("health_checks")
}

model Team {
  id          String   @id @default(uuid())
  name        String
  key         String   @unique
  description String?
  icon        String?
  color       String?
  isArchived  Boolean  @default(false) @map("is_archived")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  memberships Membership[]
  epics       Epic[]
  statuses    Status[]

  @@map("teams")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  passwordHash String   @map("password_hash")
  avatarUrl    String?  @map("avatar_url")
  isActive      Boolean  @default(true) @map("is_active")
  isGlobalAdmin Boolean  @default(false) @map("is_global_admin")
  timeZone      String?  @map("time_zone")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  memberships      Membership[]
  assignedFeatures Feature[]    @relation("AssignedFeatures")
  assignedTasks    Task[]       @relation("AssignedTasks")
  apiTokens        ApiToken[]
  personalScope    PersonalScope?
  createdTemplates PlanTemplate[]
  epicRequests     EpicRequest[]
  epicRequestReactions EpicRequestReaction[]
  epicRequestComments  EpicRequestComment[]
  
  // User tracking relations
  createdEpics     Epic[]       @relation("EpicCreatedBy")
  implementedEpics Epic[]       @relation("EpicImplementedBy")
  createdFeatures  Feature[]    @relation("FeatureCreatedBy")
  implementedFeatures Feature[] @relation("FeatureImplementedBy")
  createdTasks     Task[]       @relation("TaskCreatedBy")
  implementedTasks Task[]       @relation("TaskImplementedBy")
  
  @@index([email])
  @@map("users")
}

model ApiToken {
  id         String    @id @default(uuid())
  name       String
  tokenHash  String    @unique @map("token_hash")
  userId     String    @map("user_id")
  scopes     String?   // JSON array stored as string (SQLite limitation)
  expiresAt  DateTime? @map("expires_at")
  lastUsedAt DateTime? @map("last_used_at")
  createdAt  DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@map("api_tokens")
}

model Membership {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  teamId    String   @map("team_id")
  role      String   @default("member")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@index([userId])
  @@index([teamId])
  @@map("memberships")
}

model Epic {
  id              String   @id @default(uuid())
  name            String
  description     String?
  icon            String?
  color           String?
  sortOrder       Float    @default(0) @map("sort_order")
  isArchived      Boolean  @default(false) @map("is_archived")
  scopeType       String   @default("team") @map("scope_type") // 'team' or 'personal'
  teamId          String?  @map("team_id")
  personalScopeId String?  @map("personal_scope_id")
  
  // User tracking fields
  createdBy       String?   @map("created_by")
  implementedBy   String?   @map("implemented_by")
  implementedDate DateTime? @map("implemented_date")
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  // Structured description for AI-friendly sections
  structuredDesc  String?   @map("structured_desc")     // JSON: StructuredDescription object

  // AI session context for cross-session continuity
  aiContext       String?   @map("ai_context")          // Structured context for AI consumption
  aiNotes         String?   @map("ai_notes")            // JSON array of append-only notes
  lastAiSessionId String?   @map("last_ai_session_id")  // Track last AI session
  lastAiUpdateAt  DateTime? @map("last_ai_update_at")

  team          Team?          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  personalScope PersonalScope? @relation(fields: [personalScopeId], references: [id], onDelete: Cascade)
  creator       User?          @relation("EpicCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  implementer   User?          @relation("EpicImplementedBy", fields: [implementedBy], references: [id], onDelete: SetNull)
  features      Feature[]
  aiSessions    AiSession[]
  sessionEvents SessionEvent[]
  decisions     Decision[]
  convertedFromRequests EpicRequest[]

  @@index([teamId])
  @@index([teamId, sortOrder])
  @@index([personalScopeId])
  @@index([createdBy])
  @@index([implementedBy])
  @@map("epics")
}

model Status {
  id              String   @id @default(uuid())
  teamId          String?  @map("team_id")
  personalScopeId String?  @map("personal_scope_id")
  name            String
  category        String
  color           String?
  position        Int      @default(0)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  team          Team?          @relation(fields: [teamId], references: [id], onDelete: Cascade)
  personalScope PersonalScope? @relation(fields: [personalScopeId], references: [id], onDelete: Cascade)
  features      Feature[]
  tasks         Task[]

  @@unique([teamId, name])
  @@unique([personalScopeId, name])
  @@index([teamId])
  @@index([teamId, position])
  @@index([personalScopeId])
  @@map("statuses")
}

model Feature {
  id          String   @id @default(uuid())
  epicId      String   @map("epic_id")
  identifier  String   @unique
  title       String
  description String?
  statusId    String?  @map("status_id")
  assigneeId  String?  @map("assignee_id")
  sortOrder   Float    @default(0) @map("sort_order")
  
  // User tracking fields
  createdBy       String?   @map("created_by")
  implementedBy   String?   @map("implemented_by")
  implementedDate DateTime? @map("implemented_date")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Execution metadata for AI agents
  executionOrder      Int?     @map("execution_order")
  canParallelize      Boolean  @default(false) @map("can_parallelize")
  parallelGroup       String?  @map("parallel_group")
  dependencies        String?  @map("dependencies") // JSON array of feature IDs
  estimatedComplexity String?  @map("estimated_complexity") // trivial | simple | moderate | complex

  // AI session context for cross-session continuity
  aiContext       String?   @map("ai_context")          // Structured context for AI consumption
  aiNotes         String?   @map("ai_notes")            // JSON array of append-only notes
  lastAiSessionId String?   @map("last_ai_session_id")  // Track last AI session
  lastAiUpdateAt  DateTime? @map("last_ai_update_at")

  // Progress tracking fields
  startedAt       DateTime? @map("started_at")          // When work started
  completedAt     DateTime? @map("completed_at")        // When work completed
  durationMinutes Int?      @map("duration_minutes")    // Calculated work duration
  percentComplete Int?      @map("percent_complete")    // 0-100 progress indicator
  blockerReason   String?   @map("blocker_reason")      // What's blocking progress

  // Structured description for AI-friendly sections
  structuredDesc  String?   @map("structured_desc")     // JSON: StructuredDescription object

  // Codebase integration - link features to code artifacts
  relatedFiles     String?   @map("related_files")      // JSON array: ["src/a.ts", "src/b.ts"]
  relatedFunctions String?   @map("related_functions")  // JSON array: ["file.ts:funcName", ...]
  gitBranch        String?   @map("git_branch")         // Git branch name
  gitCommits       String?   @map("git_commits")        // JSON array: ["abc123", "def456"]
  gitPrNumber      Int?      @map("git_pr_number")      // Pull request number
  gitPrUrl         String?   @map("git_pr_url")         // Pull request URL

  epic      Epic       @relation(fields: [epicId], references: [id], onDelete: Cascade)
  status    Status?    @relation(fields: [statusId], references: [id], onDelete: SetNull)
  assignee  User?      @relation("AssignedFeatures", fields: [assigneeId], references: [id], onDelete: SetNull)
  creator   User?      @relation("FeatureCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  implementer User?    @relation("FeatureImplementedBy", fields: [implementedBy], references: [id], onDelete: SetNull)
  tasks     Task[]
  decisions Decision[]

  @@index([epicId])
  @@index([statusId])
  @@index([assigneeId])
  @@index([epicId, sortOrder])
  @@index([epicId, statusId])
  @@index([assigneeId, statusId])
  @@index([createdBy])
  @@index([implementedBy])
  @@map("features")
}

model Task {
  id          String   @id @default(uuid())
  featureId   String   @map("feature_id")
  identifier  String   @unique
  title       String
  description String?
  statusId    String?  @map("status_id")
  assigneeId  String?  @map("assignee_id")
  sortOrder   Float    @default(0) @map("sort_order")
  
  // User tracking fields
  createdBy       String?   @map("created_by")
  implementedBy   String?   @map("implemented_by")
  implementedDate DateTime? @map("implemented_date")
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Execution metadata for AI agents
  executionOrder      Int?     @map("execution_order")
  canParallelize      Boolean  @default(false) @map("can_parallelize")
  parallelGroup       String?  @map("parallel_group")
  dependencies        String?  @map("dependencies") // JSON array of task IDs
  estimatedComplexity String?  @map("estimated_complexity") // trivial | simple | moderate | complex

  // AI session context for cross-session continuity
  aiContext       String?   @map("ai_context")          // Structured context for AI consumption
  aiNotes         String?   @map("ai_notes")            // JSON array of append-only notes
  lastAiSessionId String?   @map("last_ai_session_id")  // Track last AI session
  lastAiUpdateAt  DateTime? @map("last_ai_update_at")

  // Progress tracking fields
  startedAt       DateTime? @map("started_at")          // When work started
  completedAt     DateTime? @map("completed_at")        // When work completed
  durationMinutes Int?      @map("duration_minutes")    // Calculated work duration
  percentComplete Int?      @map("percent_complete")    // 0-100 progress indicator
  blockerReason   String?   @map("blocker_reason")      // What's blocking progress

  // Structured description for AI-friendly sections
  structuredDesc  String?   @map("structured_desc")     // JSON: StructuredDescription object

  // Codebase integration - link tasks to code artifacts
  relatedFiles     String?   @map("related_files")      // JSON array: ["src/a.ts", "src/b.ts"]
  relatedFunctions String?   @map("related_functions")  // JSON array: ["file.ts:funcName", ...]
  gitBranch        String?   @map("git_branch")         // Git branch name
  gitCommits       String?   @map("git_commits")        // JSON array: ["abc123", "def456"]
  gitPrNumber      Int?      @map("git_pr_number")      // Pull request number
  gitPrUrl         String?   @map("git_pr_url")         // Pull request URL

  // Validation checklists - executable checks that define "done"
  validationChecks String?   @map("validation_checks")  // JSON array: ValidationCheck[]

  feature   Feature    @relation(fields: [featureId], references: [id], onDelete: Cascade)
  status    Status?    @relation(fields: [statusId], references: [id], onDelete: SetNull)
  assignee  User?      @relation("AssignedTasks", fields: [assigneeId], references: [id], onDelete: SetNull)
  creator   User?      @relation("TaskCreatedBy", fields: [createdBy], references: [id], onDelete: SetNull)
  implementer User?    @relation("TaskImplementedBy", fields: [implementedBy], references: [id], onDelete: SetNull)
  decisions Decision[]
  remediationCase Case? @relation("RemediationCase")

  @@index([featureId])
  @@index([statusId])
  @@index([assigneeId])
  @@index([featureId, sortOrder])
  @@index([assigneeId, statusId])
  @@index([createdBy])
  @@index([implementedBy])
  @@map("tasks")
}

model PersonalScope {
  id        String   @id @default(uuid())
  userId    String   @unique @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  statuses     Status[]
  epics        Epic[]
  epicRequests EpicRequest[]

  @@map("personal_scopes")
}

model PlanTemplate {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  isBuiltIn   Boolean  @default(false) @map("is_built_in")
  structure   String   // JSON: Template definition (TemplateStructure)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  createdById String?  @map("created_by_id")

  createdBy User? @relation(fields: [createdById], references: [id], onDelete: SetNull)

  @@index([name])
  @@index([isBuiltIn])
  @@map("plan_templates")
}

// =============================================================================
// AI Session Model
// Tracks AI work sessions for handoff between sessions
// =============================================================================

model AiSession {
  id             String    @id @default(uuid())
  epicId         String    @map("epic_id")
  externalId     String?   @map("external_id") // Optional external session ID (e.g., from Copilot)
  startedAt      DateTime  @default(now()) @map("started_at")
  endedAt        DateTime? @map("ended_at")
  status         String    @default("active") // active | completed | abandoned
  
  // State machine tracking (opt-in feature)
  stateMachineState String?  @map("state_machine_state") // STARTED | PLANNING | IMPLEMENTING | VALIDATING | COMPLETING
  
  // Work tracking
  itemsWorkedOn  String?   @map("items_worked_on") // JSON array of {type, id, identifier, action}
  summary        String?   // AI-generated summary of session work
  
  // Handoff info for successor sessions
  nextSteps      String?   @map("next_steps")    // JSON array of recommended next actions
  blockers       String?   // JSON array of blockers encountered
  decisions      String?   // JSON array of decisions made with rationale
  contextBlob    String?   @map("context_blob") // Serialized context for next session
  
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  epic         Epic           @relation(fields: [epicId], references: [id], onDelete: Cascade)
  sessionEvents SessionEvent[]

  @@index([epicId])
  @@index([epicId, status])
  @@index([startedAt])
  @@map("ai_sessions")
}

// =============================================================================
// SessionEvent Model
// Tracks detailed events within AI sessions for monitoring and debugging
// =============================================================================

model SessionEvent {
  id          String    @id @default(uuid())
  epicId      String    @map("epic_id")
  sessionId   String?   @map("session_id")
  eventType   String    @map("event_type")  // session_start | session_end | task_start | task_complete | error | etc.
  payload     String    // JSON string with event-specific data
  timestamp   DateTime  @default(now())

  epic    Epic       @relation(fields: [epicId], references: [id], onDelete: Cascade)
  session AiSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  @@index([epicId, timestamp])
  @@index([epicId, sessionId])
  @@index([eventType])
  @@map("session_events")
}

// =============================================================================
// Decision Log Model
// Append-only decision record that preserves rationale behind implementation choices
// =============================================================================

model Decision {
  id           String   @id @default(uuid())
  
  // Context - at least epicId is required
  epicId       String   @map("epic_id")
  featureId    String?  @map("feature_id")
  taskId       String?  @map("task_id")
  
  // Decision details
  question     String   // What was being decided
  decision     String   // The choice made
  rationale    String   // Why this choice was made
  alternatives String?  // JSON: What else was considered
  
  // Metadata
  madeBy       String   @map("made_by")     // "AI" | "human" | user ID
  madeAt       DateTime @default(now()) @map("made_at")
  
  // Optional categorization
  category     String?  // "architecture" | "library" | "approach" | "scope" | etc.
  impact       String?  // "low" | "medium" | "high"
  
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  epic    Epic     @relation(fields: [epicId], references: [id], onDelete: Cascade)
  feature Feature? @relation(fields: [featureId], references: [id], onDelete: SetNull)
  task    Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([epicId])
  @@index([epicId, madeAt])
  @@index([featureId])
  @@index([taskId])
  @@index([category])
  @@map("decisions")
}

// =============================================================================
// ChangeLog Model
// Track entity field-level changes for audit trails and history
// =============================================================================

model ChangeLog {
  id         String   @id @default(uuid())
  
  // Entity identification
  entityType String   @map("entity_type") // 'epic' | 'feature' | 'task'
  entityId   String   @map("entity_id")
  
  // Change details
  field      String   // Field name that changed
  oldValue   String?  @map("old_value") // JSON stringified value
  newValue   String?  @map("new_value") // JSON stringified value
  
  // Audit info
  changedBy  String   @map("changed_by") // User ID
  changedAt  DateTime @default(now()) @map("changed_at")
  
  // Epic hierarchy for efficient filtering
  epicId     String?  @map("epic_id") // Resolved at write time for hierarchy queries
  
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@index([entityType, entityId, changedAt(sort: Desc)])
  @@index([epicId, changedAt(sort: Desc)])
  @@index([changedBy])
  @@map("change_logs")
}

// =============================================================================
// Epic Request Models
// Community-driven epic suggestions with voting and discussion
// =============================================================================

model EpicRequest {
  id               String   @id @default(uuid())
  title            String
  description      String?
  structuredDesc   String?  @map("structured_desc") // JSON: StructuredDescription object
  status           String   @default("pending") // pending | approved | rejected | converted
  requestedById    String   @map("requested_by_id")
  convertedEpicId  String?  @unique @map("converted_epic_id")
  personalScopeId  String?  @map("personal_scope_id")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  requestedBy   User                     @relation(fields: [requestedById], references: [id], onDelete: Cascade)
  convertedEpic Epic?                    @relation(fields: [convertedEpicId], references: [id], onDelete: SetNull)
  personalScope PersonalScope?           @relation(fields: [personalScopeId], references: [id], onDelete: SetNull)
  reactions     EpicRequestReaction[]
  comments      EpicRequestComment[]

  @@index([requestedById])
  @@index([convertedEpicId])
  @@index([personalScopeId])
  @@index([status])
  @@index([createdAt])
  @@map("epic_requests")
}

model EpicRequestReaction {
  id             String   @id @default(uuid())
  epicRequestId  String   @map("epic_request_id")
  userId         String   @map("user_id")
  reactionType   String   @map("reaction_type") // thumbs-up, heart, rocket, etc.
  createdAt      DateTime @default(now()) @map("created_at")

  epicRequest EpicRequest @relation(fields: [epicRequestId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([epicRequestId, userId])
  @@index([epicRequestId])
  @@index([userId])
  @@map("epic_request_reactions")
}

model EpicRequestComment {
  id            String   @id @default(uuid())
  epicRequestId String   @map("epic_request_id")
  authorId      String   @map("author_id")
  content       String
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  epicRequest EpicRequest @relation(fields: [epicRequestId], references: [id], onDelete: Cascade)
  author      User        @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([epicRequestId])
  @@index([authorId])
  @@index([epicRequestId, createdAt])
  @@map("epic_request_comments")
}

// =============================================================================
// Law Model
// Registry of enforceable rules for AI agent governance
// Valid LawSeverity values: 'minor', 'major', 'critical'
// =============================================================================

model Law {
  id          String   @id @default(uuid())
  lawCode     String   @unique @map("law_code")
  title       String
  description String
  severity    String   // 'minor' | 'major' | 'critical'
  auditLogic  String   @map("audit_logic")
  consequence String
  appliesTo   String   @map("applies_to")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  cases Case[]

  @@index([severity])
  @@index([appliesTo])
  @@index([isActive])
  @@map("laws")
}

// =============================================================================
// Case Model
// Court cases filed against AI agents for law violations
// Valid CaseStatus values: 'open', 'hearing', 'verdict', 'corrected', 'dismissed'
// Valid CaseVerdict values: 'guilty', 'not_guilty', 'dismissed'
// Valid DeductionLevel values: 'none', 'minor', 'major', 'critical'
// =============================================================================

model Case {
  id                String    @id @default(uuid())
  caseNumber        Int       @unique @map("case_number")
  accusedAgent      String    @map("accused_agent")
  lawId             String    @map("law_id")
  evidence          String    // JSON array: [{type, reference, description}]
  severity          String    // 'minor' | 'major' | 'critical'
  status            String    @default("open") // 'open' | 'hearing' | 'verdict' | 'corrected' | 'dismissed'
  filedBy           String    @default("barney") @map("filed_by")
  verdict           String?   // 'guilty' | 'not_guilty' | 'dismissed'
  verdictReason     String?   @map("verdict_reason")
  deductionLevel    String?   @map("deduction_level") // 'none' | 'minor' | 'major' | 'critical'
  remediationTaskId String?   @unique @map("remediation_task_id")
  filedAt           DateTime  @default(now()) @map("filed_at")
  resolvedAt        DateTime? @map("resolved_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  law             Law   @relation(fields: [lawId], references: [id])
  remediationTask Task? @relation("RemediationCase", fields: [remediationTaskId], references: [id])

  @@index([status])
  @@index([accusedAgent])
  @@index([lawId])
  @@index([severity])
  @@index([filedAt])
  @@map("cases")
}

// =============================================================================
// AgentScore Model
// Tracks agent reputation scores for the governance system
// =============================================================================

model AgentScore {
  id             String    @id @default(uuid())
  agentName      String    @unique @map("agent_name")
  agentTitle     String    @map("agent_title")
  totalScore     Int       @default(100) @map("total_score")
  bustsReceived  Int       @default(0) @map("busts_received")
  bustsIssued    Int       @default(0) @map("busts_issued")
  cleanCycles    Int       @default(0) @map("clean_cycles")
  lastAuditAt    DateTime? @map("last_audit_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  @@map("agent_scores")
}

// =============================================================================
// Skill Pack Models
// Central registry for installable Skill Packs with versioning
// =============================================================================

model SkillPack {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "@spectree/planning"
  displayName String   @map("display_name") // e.g., "Planning & Scoping"
  description String?
  authorName  String?  @map("author_name")
  authorUrl   String?  @map("author_url")
  homepageUrl String?  @map("homepage_url")
  
  // Current published version tracking
  latestVersion String?  @map("latest_version") // e.g., "1.2.3"
  
  // Metadata
  isOfficial   Boolean  @default(false) @map("is_official") // Official @spectree packs
  isDeprecated Boolean  @default(false) @map("is_deprecated")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  versions       SkillPackVersion[]
  installations  InstalledSkillPack[]

  @@index([name])
  @@index([isOfficial])
  @@map("skill_packs")
}

model SkillPackVersion {
  id            String   @id @default(uuid())
  skillPackId   String   @map("skill_pack_id")
  version       String   // Semver version string, e.g., "1.2.3"
  manifest      String   // JSON manifest: agents, skills, instructions, dependencies
  
  // Version metadata
  releaseNotes  String?  @map("release_notes")
  isPrerelease  Boolean  @default(false) @map("is_prerelease")
  publishedAt   DateTime @default(now()) @map("published_at")
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  skillPack SkillPack @relation(fields: [skillPackId], references: [id], onDelete: Cascade)
  files     SkillPackFile[]

  @@unique([skillPackId, version])
  @@index([skillPackId])
  @@index([skillPackId, publishedAt])
  @@map("skill_pack_versions")
}

model SkillPackFile {
  id        String   @id @default(uuid())
  versionId String   @map("version_id")
  path      String   // Relative path within the pack, e.g., "agents/planner.md"
  content   String   // File content
  mimeType  String?  @map("mime_type") // e.g., "text/markdown", "application/json"
  
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  version SkillPackVersion @relation(fields: [versionId], references: [id], onDelete: Cascade)

  @@unique([versionId, path]) // One file per path per version
  @@index([versionId])
  @@map("skill_pack_files")
}

