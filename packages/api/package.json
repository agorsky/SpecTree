{
  "name": "@dispatcher/api",
  "version": "0.2.0",
  "private": true,
  "description": "SpecTree API backend",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./src/services/index.js": "./dist/services/index.js",
    "./src/utils/ordering.js": "./dist/utils/ordering.js"
  },
  "scripts": {
    "build": "prisma generate && tsc && cp -r src/generated dist/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:backup": "mkdir -p ../../backups && cp prisma/data/spectree.db \"../../backups/spectree_$(date +%Y%m%d_%H%M%S).db\" && echo 'Backup created in backups/'",
    "db:migrate": "echo '\u26a0\ufe0f  WARNING: This may reset your database!' && echo 'Run db:backup first, then use: npx prisma migrate dev' && exit 1",
    "db:migrate:safe": "npm run db:backup && prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:restore": "echo 'Usage: cp backups/<backup-file>.db prisma/data/spectree.db'",
    "db:generate:sqlserver": "prisma generate --schema=prisma/schema.sqlserver.prisma",
    "db:push:sqlserver": "prisma db push --schema=prisma/schema.sqlserver.prisma",
    "db:push:sqlserver:indexes": "prisma db execute --schema=prisma/schema.sqlserver.prisma --file=prisma/sqlserver-post-push.sql",
    "db:migrate:deploy:sqlserver": "prisma migrate deploy --schema=prisma/schema.sqlserver.prisma",
    "db:studio:sqlserver": "prisma studio --schema=prisma/schema.sqlserver.prisma"
  },
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.3.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.2.0",
    "jsonwebtoken": "^9.0.3",
    "semver": "^7.7.4",
    "tar": "^7.5.9",
    "zod": "^3.24.0",
    "@dispatcher/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/semver": "^7.7.1",
    "@types/tar": "^6.1.13",
    "prisma": "^6.3.0",
    "tsx": "^4.19.0"
  }
}