DATABASE_URL="sqlserver://localhost:1433;database=spectree;user=sa;password=LocalDev@Password123;encrypt=true;trustServerCertificate=true"

# Azure SQL Database format (for production):
# DATABASE_URL="sqlserver://server.database.windows.net:1433;database=spectree;user=app;password=xxx;encrypt=true"

# Legacy individual connection params (kept for reference, not used by Prisma)
# DB_HOST=localhost
# DB_PORT=1433
# DB_NAME=spectree
# DB_USER=sa
# DB_PASSWORD=LocalDev@Password123

# =============================================================================
# JWT Configuration
# =============================================================================

# Secret key for signing JWT tokens (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
