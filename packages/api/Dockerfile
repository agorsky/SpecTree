FROM node:22-alpine AS base
RUN corepack enable pnpm

# Build stage
FROM base AS builder
WORKDIR /app

# Copy package files and override postinstall to avoid bash dependency
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./
COPY packages/shared/package.json ./packages/shared/
COPY packages/api/package.json ./packages/api/
RUN node -e "const p=require('./package.json'); delete p.scripts.postinstall; require('fs').writeFileSync('./package.json', JSON.stringify(p, null, 2))"

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy source
COPY tsconfig.base.json ./
COPY packages/shared ./packages/shared
COPY packages/api ./packages/api

# Generate Prisma client from SQL Server schema for Azure deployment
RUN pnpm --filter @dispatcher/api exec prisma generate --schema=prisma/schema.sqlserver.prisma

# Build (skip prisma generate in build script â€” already generated from sqlserver schema above)
RUN pnpm --filter @dispatcher/shared build
RUN cd packages/api && npx tsc && cp -r src/generated dist/

# Production stage
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production

# Copy package files
COPY --from=builder /app/package.json ./
COPY --from=builder /app/pnpm-lock.yaml ./
COPY --from=builder /app/pnpm-workspace.yaml ./
COPY --from=builder /app/packages/shared/package.json ./packages/shared/
COPY --from=builder /app/packages/shared/dist ./packages/shared/dist
COPY --from=builder /app/packages/api/package.json ./packages/api/
COPY --from=builder /app/packages/api/dist ./packages/api/dist
COPY --from=builder /app/packages/api/prisma ./packages/api/prisma

# Install production dependencies (postinstall already stripped from package.json)
RUN pnpm install --frozen-lockfile --prod

# Note: Generated Prisma client is already copied to dist/generated by the build script

EXPOSE 3001

CMD ["node", "packages/api/dist/index.js"]
